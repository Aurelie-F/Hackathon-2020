{% extends 'layout.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/order.css">
{% endblock %}

{% block content %}

    <div class="container mt-5 pt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2 col-12 pt-5 pb-2">
                <h1 class="text-center"> Equipment request </h1>
            </div>
        </div>
        {% if not errors is empty %}
            <div class="row ">
                {% for error in errors %}
                    <div class="col-md-8 offset-md-2 alert alert-danger">
                        {{ error }}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        <div class="row">
            <div class="col-md-8 offset-md-2 pb-5">
                <form action="" method="post">
                    <div class="form-group">
                        <label for="user_name"> Name : </label>
                        <input type="text" name="user_name" id="user_name" value="{{ order.user_name }}" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="user_serial_number"> Serial Number : </label>
                        <input type="text" name="user_serial_number" id="user_serial_number" value="{{ order.user_serial_number }}" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="equipment-name"> Equipment : </label>
                        <input type="text" name="equipment-name" id="equipment-name" value="{{ equipment.name ?? ' ' }}" class="form-control" disabled>
                    </div>
                    <div class="form-group">
                        <label for="message">Your message</label>
                        <textarea name="message" id="message" value="{{ order.message ?? ' ' }}"  class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn">Send request to my Commandant</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
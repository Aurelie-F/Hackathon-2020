{% extends 'layout.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/order.css">
{% endblock %}

{% block title %} {{ parent() }} - Admin{% endblock %}

{% block content %}
    <div class="container mt-5 pt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2 col-12 pt-5 pb-2">
                <h1> New Equipment </h1>
            </div>
        </div>
        {% if not errors is empty %}
            <div class="row ">
                {% for error in errors %}
                    <div class="col-md-8 offset-md-2 alert alert-danger">
                        {{ error }}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
    <div class="container mb-5 pb-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form action="" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="category">Category</label>
                        <select name="category" id="category">
                            {% for category in categories %}
                                <option {{ equipment.category == category.id ? 'selected' }}
                                        value="{{ category.id }}">{{ category.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="name">Name </label>
                        <input type="text" name="name" id="name" class="form-control" value="{{ equipment.name }}" >
                    </div>
                    <div class="form-group">
                        <label for="image">Image File</label>
                        <input type="hidden" name="MAX_FILE_SIZE" value="5000000"/>
                        <input  type="file" id="image" name="image" class="form-control-file">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea name="description" id="description" value="{{ equipment.description ?? ' ' }}"  class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="price">Price </label>
                        <input type="text" name="price" id="price" class="form-control" value="{{ equipment.price }}" >
                    </div>
                    <div class="form-group">
                        <label for="stock">Stock </label>
                        <input type="text" name="stock" id="stock" class="form-control" value="{{ equipment.stock }}" >
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-dark">Add equipment</button>
                    </div>
                </form>
                <a href="AdminEquipment/index" class="btn btn-dark" role="button">Back to List</a>
            </div>
        </div>
    </div>
{% endblock %}
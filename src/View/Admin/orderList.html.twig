{% extends 'layout.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/admin.css">
{% endblock %}

{% block title %} {{ parent() }} - Admin{% endblock %}

{% block content %}
    <main class="container mt-5 pt-5 mb-5 pb-5">
        <h1 class="my-5 text-center">Orders</h1>
        <h2 class="my-4">In progress</h2>
        {% if ordersInProgress is empty %}
            <div class="text-white">Nothing to display</div>
        {% else %}
            <table class="table table-light table-bordered table-hover text-center">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Status</th>
                    <th scope="col">Equipment</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for order in ordersInProgress %}
                    <tr>
                        <td scope="row" class="align-middle">{{ order.order_date }}</td>
                        <td scope="row" class="align-middle">{{ order.status }}</td>
                        <td scope="row" class="align-middle">{{ order.equipment }}</td>
                        <td scope="row" class="text-center">
                            <a href="/adminOrder/show/{{ order.id }}" class="btn btn-info">
                                <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-eye" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.134 13.134 0 0 0 1.66 2.043C4.12 11.332 5.88 12.5 8 12.5c2.12 0 3.879-1.168 5.168-2.457A13.134 13.134 0 0 0 14.828 8a13.133 13.133 0 0 0-1.66-2.043C11.879 4.668 10.119 3.5 8 3.5c-2.12 0-3.879 1.168-5.168 2.457A13.133 13.133 0 0 0 1.172 8z"/>
                                    <path fill-rule="evenodd" d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                                </svg>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
        <h2 class="mt-5 mb-4">Accepted / Refused</h2>
        {% if ordersValRef is empty %}
            <div class="text-white">Nothing to display</div>
        {% else %}
            <table class="table table-light table-bordered table-hover text-center">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Status</th>
                    <th scope="col">Equipment</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for order in ordersValRef %}
                    <tr>
                        <td scope="row" class="align-middle">{{ order.order_date }}</td>
                        <td scope="row" class="align-middle">{{ order.status }}</td>
                        <td scope="row" class="align-middle">{{ order.equipment }}</td>
                        <td scope="row" class="text-center">
                            <a href="/adminOrder/show/{{ order.id }}" class="btn btn-info">
                                <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-eye" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.134 13.134 0 0 0 1.66 2.043C4.12 11.332 5.88 12.5 8 12.5c2.12 0 3.879-1.168 5.168-2.457A13.134 13.134 0 0 0 14.828 8a13.133 13.133 0 0 0-1.66-2.043C11.879 4.668 10.119 3.5 8 3.5c-2.12 0-3.879 1.168-5.168 2.457A13.133 13.133 0 0 0 1.172 8z"/>
                                    <path fill-rule="evenodd" d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                                </svg>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </main>
{% endblock %}
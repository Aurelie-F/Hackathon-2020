{% extends 'layout.html.twig' %}
{% block title %}{{ parent() }} | My exercises{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/exercise.css">
{% endblock %}

{% block content %}
    <header class="d-flex text-center justify-content-around align-items-center exercise mt-5 pt-5">
        <h1 class="exercise-h1">My exercises</h1>
    </header>
    <section>
        <div class="container">
            <div class="row justify-content-around mx-0">
                {% if exercises is not empty %}
                {% for exercise in exercises %}
                    <div class="col-md-5 d-flex justify-content-between align-items-center exercises-list m-1">
                        <img src="/assets/images/gym.png" alt="{{ exercise.name }}" class="exercise-image">
                        <div class="card-body d-flex flex-column justify-content-center">
                            <a href="/exercises/exercise/{{ exercise.id }}">
                                <h3>{{ exercise.name }}</h3>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
            {% else %}
                <p>You have not done anything yet!</p>
            {% endif %}
        </div>
    </section>
{% endblock %}
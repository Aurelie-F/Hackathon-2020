{% extends 'layout.html.twig' %}
{% block title %}{{ parent() }} | Exercises | Muscles{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/exercise.css">
{% endblock %}

{% block content %}
    <header class="d-flex text-center justify-content-around align-items-center muscles">
        <h1 class="muscles-h1">Muscle</h1>
    </header>
    <section>
        <div class="container">
            <div class="row justify-content-around mx-0">
                {% for result in muscles %}
                    {% for muscle in result %}
                        <div class="col-md-5 d-flex justify-content-between align-items-center muscles-list">
                                <img src="/assets/images/muscles/{{ illustrations[muscle.id] }}"
                                     alt="muscle illustration" class="illustration muscle-category-illustration">
                            <div class="card-body d-flex flex-column justify-content-center">
                                <a href="/exercises/muscle/{{ muscle.id }}">
                                    <h3>{{ muscle.name }}</h3>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
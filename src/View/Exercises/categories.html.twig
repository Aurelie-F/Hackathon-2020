{% extends 'layout.html.twig' %}
{% block title %}{{ parent() }} | Exercises | Categories{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/exercise.css">
{% endblock %}

{% block content %}
    <header class="d-flex text-center justify-content-around align-items-center categories mt-5 pt-5">
        <div class="row">
            <div class="col-12 text-center">
                <img class="pb-5" style="width:250px;" src="/assets/images/home-category.png" alt="Home victory logo">
                <h1>Category</h1>
            </div>
        </div>
    </header>
    <section>
        <div class="container mb-5 pb-5">
            {% for result in categories %}
                {% for category in result %}
                    <div class="row justify-content-around mx-0">
                        <div class="col-md-6 d-flex justify-content-between align-items-center categories-list">
                            <div>
                                <img src="/assets/images/categories/{{ images[category.id] }}" alt="{{ category.name }}"
                                     class="category-image">
                            </div>
                            <div class="card-body d-flex flex-column justify-content-center">
                                <a href="/exercises/category/{{ category.id }}">
                                    <h3>{{ category.name }}</h3>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </section>
{% endblock %}
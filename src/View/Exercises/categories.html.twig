{% extends 'layout.html.twig' %}
{% block title %}{{ parent() }} | Exercises | Categories{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/exercise.css">
{% endblock %}

{% block content %}
    <header class="d-flex text-center justify-content-around align-items-center categories">
        <h1 class="categories-h1">Category</h1>
    </header>
    <section>
        <div class="container-fluid">
            <div class="row justify-content-around mx-0">
                {% for result in categories %}
                    {% for category in result %}
                        <div class="col-md-3 d-flex justify-content-between align-items-center p-0 m-2">
                            <div>
                                <img src="https://via.placeholder.com/150" alt="{{ category.name }}">
                            </div>
                            <div class="card-body d-flex flex-column justify-content-center">
                                <a href="/exercises/category/{{ category.id }}">
                                    <h2>{{ category.name }}</h2>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
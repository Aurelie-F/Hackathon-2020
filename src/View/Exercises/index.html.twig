{% extends 'layout.html.twig' %}
{% block title %}{{ parent() }} | Exercises{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/exercise.css">
{% endblock %}

{% block content %}
    <header class="d-flex text-center justify-content-around align-items-center exercises">
        <h1 class="exercises-h1">Exercises</h1>
    </header>
    <section>
        <div class="container">
            <div class="row justify-content-around mx-0">
                {% for result in exercises %}
                    {% for exercise in result %}
                        <div class="col-md-3 d-flex justify-content-between align-items-center p-0 m-2">
                            <div>
                                <img src="/assets/images/workout.png" alt="{{ exercise.name }}" class="exercise-image">
                            </div>
                            <div class="card-body d-flex flex-column justify-content-center align_items_center">
                                <a href="/exercises/exercise/{{ exercise.id }}">
                                    <h3>{{ exercise.name }}</h3>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}